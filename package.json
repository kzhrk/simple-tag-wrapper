{
  "name": "wrap-with-tag",
  "description": "A wrap-with-tag provides a simple function to wrap string with html.",
  "version": "1.0.1",
  "author": "Kazuhiro Kobayashi <info@kzhrk.com> (https://blog.kzhrk.com)",
  "bugs": {
    "url": "https://github.com/kzhrk/wrap-with-tag/issues"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/plugin-syntax-object-rest-spread": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.4",
    "coveralls": "^3.0.2",
    "eslint": "^5.7.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-jest": "^21.26.0",
    "eslint-plugin-prettier": "^3.0.0",
    "jest": "^23.6.0",
    "prettier": "^1.14.3",
    "pug-cli": "^1.0.0-alpha6",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "webpack": "^4.22.0",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10"
  },
  "files": [
    "dist",
    "LICENSE"
  ],
  "homepage": "https://github.com/kzhrk/wrap-with-tag#readme",
  "jest": {
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest"
    },
    "moduleFileExtensions": [
      "js"
    ]
  },
  "jsnext:main": "./src/index.js",
  "keywords": [
    "html"
  ],
  "license": "MIT",
  "main": "./dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kzhrk/wrap-with-tag.git"
  },
  "scripts": {
    "build": "npm run webpack:pro",
    "docs": "npm run webpack:docs; npm run pug:pro",
    "lint": "eslint --fix --ext .js ./src ./__tests__",
    "prepublish": "npm run test; npm run build",
    "pug:dev": "pug ./docs/src/pug -Pwo ./docs",
    "pug:pro": "pug ./docs/src/pug -o ./docs",
    "start": "npm run webpack:dev & npm run pug:dev",
    "test": "jest",
    "webpack:dev": "NODE_ENV=development webpack-dev-server --config ./webpack.config.docs.js",
    "webpack:docs": "NODE_ENV=production webpack --config ./webpack.config.docs.js  --display-used-exports",
    "webpack:pro": "NODE_ENV=production webpack --display-used-exports"
  }
}
